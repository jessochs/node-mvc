<% if (title) { %>
  <h1>
    <%= title %>
  </h1>
  <% } else { res.redirect('/') } %>

    <!-- Message block  -->
    <%- messages() %>

      <% if (errors) { %>
        <ul class="notice">
          <% errors.array().forEach(error=> { %>
            <li>
              <%= error.msg %>
            </li>
            <% }) %>
        </ul>
        <% } %>

          <h2>You are logged in!</h2>
          <div id="welcome-account">

            <% if (locals.accountData.account_type=='Client' ) { %>
              <h2>Welcome, <%= locals.accountData.account_firstname %>
              </h2>
              <a href="/update-account">Update Account</a>

              <% } else { %>
                <h2>Welcome, <%= locals.accountData.account_firstname %>
                </h2>
                <a href="/update-account">Update Account</a>
                <h3>Inventory Management</h3>
                <a title="Go to inventory management" href="/inv/">Manage Inventory</a>
                <% } %>

          </div>
          